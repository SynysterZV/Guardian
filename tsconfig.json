{
  "compilerOptions": {
    "target": "ES2020",                                  
    "module": "commonjs",                                  
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,

    "moduleResolution": "node",                          
    "baseUrl": "src",                                  
    "paths": {
      "#handlers/*": ["handlers/*"],
      "#structures/*": ["structures/*"],
      "#util/*": ["util/*"],
      "#types/*": ["types/*"]
    },

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                                      
    "skipLibCheck": true                                 
  }
}
